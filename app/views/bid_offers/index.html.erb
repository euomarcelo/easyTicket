<h1>Listing bid_offers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Offer</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_offers.each do |bid_offer| %>
      <tr>
        <td><%= bid_offer.user_id %></td>
        <td><%= bid_offer.offer_id %></td>
        <td><%= bid_offer.value %></td>
        <td><%= link_to 'Show', bid_offer %></td>
        <td><%= link_to 'Edit', edit_bid_offer_path(bid_offer) %></td>
        <td><%= link_to 'Destroy', bid_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

